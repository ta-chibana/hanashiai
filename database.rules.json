{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "messages": {
			"$message": {
        ".validate": "newData.child('message').val().length > 0 && newData.child('message').val().length <= 100"
      }
    },
    "fcmTokens": {
      "$token": {
        ".read": "data.val() === auth.uid",
        ".write": "!data.exists() || data.val() === auth.uid",
        ".validate": "newData.val() === auth.uid"
      }
    }
  }
}
